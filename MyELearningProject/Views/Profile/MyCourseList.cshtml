@model List<MyELearningProject.DAL.Entities.Process>

@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h2 class="card-header"> Kurslarım</h2>
                <br />
                <table class=" table table-bordered">
                    <tr>
                        <th> # </th>
                        <th> Kurs Adı </th>
                        <th> Kategorisi </th>
                        <th> Süre </th>
                        <th> Fiyat</th>
                        <td>Kursu İzle</td>

                        @foreach (var p in Model)
                        {
                            count++;
                        <tr>
                            <td>@count</td>
                            <td>@p.course.tittle</td>
                            <td>@p.course.category.categoryName</td>
                            <td>@p.course.duration</td>
                            <td>@p.course.price</td>
                            <td><a href="/Profile/playlist/@p.courseID/" class="btn btn-outline-info">Kursu İzle</a></td>
                        </tr>
                    }
                    </table>
                  
                </div>
            </div>
        </div>
    </div>
