@model List<MyELearningProject.DAL.Entities.Communucation>
@{
    ViewBag.Title = "communucationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row g-4">
    @foreach (var c in Model)
    {
        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
            <h5>Bize Ulaşın</h5>
            <p class="mb-4">.NET ile alakalı tüm problemler ve çözümler için bize aşağıdaki seçeneklereden ulaşabilirsiniz</p>

            <div class="d-flex align-items-center mb-3">
                <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                    <i class="fa fa-home text-white"></i>
                </div>
                <div class="ms-3">
                    <h5 class="text-primary">Adres</h5>
                    <p class="mb-0">@c.office</p>
                </div>
            </div>
            <div class="d-flex align-items-center mb-3">
                <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                    <i class="fa fa-mobile-phone text-white"></i>
                </div>
                <div class="ms-3">
                    <h5 class="text-primary">Telefon</h5> 
                    <p class="mb-0">@c.phone</p>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                    <i class="fa fa-envelope-open text-white"></i>
                </div>
                <div class="ms-3">
                    <h5 class="text-primary">Email</h5>
                    <p class="mb-0">@c.mail</p>
                </div>
            </div>
        </div>




        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
            <iframe class="position-relative rounded w-100 h-100"
                    src="@c.mapUrl"
                    frameborder="0" style="min-height: 300px; border:0;" allowfullscreen="" aria-hidden="false"
                    tabindex="0"></iframe>
        </div>
    }
</div>

