@model List<MyELearningProject.DAL.Entities.Student>




@{
    ViewBag.Title = "StudentList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h2 class="card-header"> Öğrenci Listesi </h2>
                <br />
                <table class=" table table-bordered">
                    <tr>
                        <th> # </th>
                        <th> Öğrenci Adı Soyadı </th>
                        <th> Sil </th>
                        <th> Güncelle </th>
                        <th> Kurslar </th>
                    </tr>

                    @if (Model.Count > 0 && Model != null)
                    {
                        foreach (var s in Model)
                        {
                            <tr>
                                <td>@s.studentID</td>
                                <td>@s.sname @s.ssurname</td>
                                <td><a href="/Student/DeleteStudent/@s.studentID" class="btn btn-outline-danger"> Sil </a></td>
                                <td><a href="/Student/UpdateStudent/@s.studentID" class="btn btn-outline-success"> Güncelle </a></td>
                                <td><a href="/Instructor/#/@s.studentID" class="btn btn-outline-warning"> Kurslar </a></td>
                            </tr>
                        }

                    }
                    else
                    {
                        <label class="alert-danger" style="border:solid"> @ViewBag.hata</label>
                    }
                </table>


                <a class="btn btn-outline-secondary" href="/Student/AddStudent/"> Yeni Öğrenci Ekle</a>
            </div>
        </div>
    </div>
</div>

