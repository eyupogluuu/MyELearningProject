@model MyELearningProject.DAL.Entities.Review
@{
    ViewBag.Title = "Addreview";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
<script src="~/v2.3.2/jquery.min.js"></script>

<script src="~/v2.3.2/jquery.rateyo.min.js"></script>
<link href="~/v2.3.2/jquery.rateyo.min.css" rel="stylesheet" />
<h2>Yorum Ekleme Sayfası</h2>

<form method="post">
    <label>Kurs Adı:</label>
    @Html.DropDownListFor(x => x.CourseID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
    <br /><br />
    <label>Öğrenci Adı:</label>
    @Html.DropDownListFor(x => x.StudentID, (List<SelectListItem>)ViewBag.v2, new { @class = "form-control" })
    <br /><br />
    <label>Puan:</label>
    <fieldset class="rate">
        <input type="radio" id="rating1" name="ReviewScore" value="1" />
        <label class="half" for="rating1" title="1"></label>
        <input type="radio" id="rating2" name="ReviewScore" value="2" />
        <label for="rating2" title="2"></label>
        <input type="radio" id="rating3" name="ReviewScore" value="3" />
        <label class="half" for="rating3" title="3"></label>
        <input type="radio" id="rating4" name="ReviewScore" value="4" />
        <label for="rating4" title="4"></label>
        <input type="radio" id="rating5" name="ReviewScore" value="5" />
        <label class="half" for="rating5" title="5"></label>


    </fieldset>
    @*@Html.TextBoxFor(x => x.ReviewScore, new { @class = "form-control", })*@

    <br /><br />
    <button class="btn-primary">Kaydet</button>
</form>


