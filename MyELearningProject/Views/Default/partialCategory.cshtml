@model List<MyELearningProject.DAL.Entities.Category>
<div class="container-xxl py-5 category">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Kategoriler</h6>
            <h1 class="mb-5">Mevcut Kurs Kategorlilerimiz</h1>
        </div>
        <div class="row g-3">
           
                @*<div class="col-lg-7 col-md-6">*@

                    <div class="row g-3">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-12 col-md-12 wow zoomIn" data-wow-delay="0.1s" style="margin-left:200px; width:700px;">
                                <a class="position-relative d-block overflow-hidden" href="">
                                    <img class="img-fluid" src="@item.categoryimage" alt="">
                                    <div class="bg-white text-center position-absolute bottom-0 end-0 py-2 px-3" style="margin: 1px;">
                                        <h5 class="m-0">@item.categoryName</h5>
                                        <small class="text-primary">@Model.Count()</small>
                                    </div>
                                </a>
                            </div>
                        }
                        </div>

                   

                @*</div>*@
            
            </div>
    </div>
</div>
